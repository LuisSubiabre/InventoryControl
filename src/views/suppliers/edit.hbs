<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/suppliers/edit/{{supplier.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{supplier.description}}" class="form-control" name="description" placeholder="Name" style="text-transform: uppercase" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{supplier.contact}}" class="form-control" name="contact" placeholder="Contact Name" style="text-transform: uppercase">
                        </div>
                        <div class="form-group">
                            <input type="email" value="{{supplier.email}}" class="form-control" name="email" placeholder="email">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{supplier.phone}}" class="form-control" name="phone" style="text-transform: uppercase" placeholder="Phone">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{supplier.adress}}" class="form-control" name="adress" style="text-transform: uppercase" placeholder="Adress">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Update
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>