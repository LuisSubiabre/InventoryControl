<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/inventory/edit/{{product.id}}" method="POST" name="f1" enctype="multipart/form-data">
                        <div class="div form-group">
                            <label><b>CATEGORIE:</b></label>
                            <p style="text-transform: uppercase">{{categorie.name}}</p>
                        </div>
                        <div class="div form-group">
                            <label><b>PRODUCT CODE:</b></label>
                            <p style="text-transform: uppercase">{{product.keyName}}{{product.numCode}}</p>
                        </div>

                        <div class="form-group">
                            <label><b>PRODUCT DESCRIPTION:</b></label>
                            <input type="text" value='{{product.name}}' class="form-control" name="description"
                                style="text-transform: uppercase" placeholder="Description">
                        </div>

                        <div class="div form-group">
                            <label><b>SUPPLIERS:</b></label>

                            <select name="suppliers" id="" class="form-control" style="text-transform: uppercase">
                                <optgroup label="Current:">
                                    <option value="{{supplierSelect.id}}" selected>{{supplierSelect.description}}
                                    </option>
                                </optgroup>
                                <optgroup label="Others:">
                                    {{#each suppliers}}
                                    <option value="{{id}}">{{description}}</option>
                                    {{/each}}
                                </optgroup>
                            </select>
                        </div>
                        <div class="div form-group">
                            <label><b>LOCATION:</b></label>
                            <select name="locations" id="" class="form-control" style="text-transform: uppercase">
                                <optgroup label="Current:">
                                    <option value="{{locationsSelect.id}}" selected>{{locationsSelect.description}}
                                    </option>
                                </optgroup>
                                <optgroup label="Others:">
                                    {{#each locations}}
                                    <option value="{{id}}">{{description}}</option>
                                    {{/each}}
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group">
                             <label><b>SERIAL NUMBER:</b></label>
                            <input type="text" value='{{product.serialNumber}}' class="form-control" name="serialNumber"
                                placeholder="serial Number" style="text-transform: uppercase">
                        </div>
                        <div class="form-group">
                             <label><b>INVOICE:</b></label>
                            <input type="text" value='{{product.invoice}}' class="form-control" name="invoice"
                                placeholder="Invoice" style="text-transform: uppercase">
                        </div>
                        <div class="form-group">
                             <label><b>BRAND:</b></label>
                            <input type="text" value='{{product.brand}}' class="form-control" name="brand"
                                placeholder="Brand" style="text-transform: uppercase">
                        </div>
                        <div class="div form-group">
                            <label><b>PRODUCT STATUS:</b></label>
                            <select name="status" id="" class="form-control" style="text-transform: uppercase">
                                <optgroup label="Current:">
                                    <option value="{{statusSelect.id}}" selected>{{statusSelect.description}}
                                    </option>
                                </optgroup>
                                <optgroup label="Others:">
                                    {{#each status}}
                                    <option value="{{id}}">{{description}}</option>
                                    {{/each}}
                                </optgroup>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="file" name="avatar" class="file" accept="image/*">
                            <div class="input-group my-3">
                                <input type="text" class="form-control" disabled placeholder="Upload File" id="file">
                                <div class="input-group-append">
                                    <button type="button" class="browse btn btn-primary">Browse...</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="ml-2 col-sm-6">
                                <img src="/uploads/inventory/{{product.photo}}" id="preview" class="img-thumbnail">
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save Update
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<form action="" method="POST" name="f2">
    <select name="categories2" id="categories2" class="invisible">
        {{#each categories}}
        <option id="{{lastCode}}" disabled>{{lastCode}}</option>
        {{/each}}
    </select>
</form>
<script>
    $(document).on("click", ".browse", function () {
        var file = $(this).parents().find(".file");
        file.trigger("click");
    });
    $('input[type="file"]').change(function (e) {
        var fileName = e.target.files[0].name;
        $("#file").val(fileName);

        var reader = new FileReader();
        reader.onload = function (e) {
            // get loaded data and render thumbnail.
            document.getElementById("preview").src = e.target.result;
        };
        // read the image file as a data URL.
        reader.readAsDataURL(this.files[0]);
    });
</script>