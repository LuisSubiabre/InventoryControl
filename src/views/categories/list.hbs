<div class="container p-4">
    <div class="row">
        <div class="col-4 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    <h3>Categories</h3>
                    <h4></h4>
                    <a href="/categories/add" class="btn btn-primary m-4">
                        Create One!
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container p-4">
    <div class="row">
        {{#each categories}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="/categories/edit/{{id}}">
                        <h3 class="card-title text-uppercase">
                            {{name}}
                        </h3>
                    </a>
                    <p>KEY: {{keyName}}</p>
                    <p>{{timeago created_at}}</p>
                    <a href="javascript:preguntar({{id}},'{{name}}')" class="btn btn-danger">Delete</a>
                    <a href="/categories/edit/{{id}}" class="btn btn-secondary">Edit</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not categories save yet.</p>
                <a href="/categories/add">Create One!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script type="text/javascript">
    function preguntar(idSupplier, name) {
        eliminar = confirm("Â¿Deseas eliminar este registro? " + name);
        if (eliminar)
            //Redireccionamos si das a aceptar
            window.location.href = "/categories/delete/" + idSupplier + ""
    }
</script>