<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/categories/add" method="POST" name="f1">
                        <div class="form-group">
                            <input type="text" class="form-control" name="description" placeholder="Name"
                                onblur="generarKey()" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="keyName" placeholder="Key Name"
                                style="text-transform: uppercase">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function generarKey() {
        let name = document.f1.description.value;
        let newKey = name.substr(0, 3);
        document.f1.keyName.value = newKey.toUpperCase();
    }

</script>